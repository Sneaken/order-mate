// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// user (用户信息表)
model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  phone    String
  address  String
}

// menu (菜单表)
model Menu {
  id Int @id
}

// order (订单表)
model order {}

// cart (购物车表)
model cart {}

// shop (店铺信息表)
model shop {}

// payment (支付信息表)
model payment {}

// comment (评价信息表)
model comment {}





// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户信息表
model User {
  id          Int      @id @default(autoincrement())
  username    String
  password    String
  phone       String
  gender      String
  birthday    String
  address     String
}

// 商家表
model Merchant {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  phone       String
  image       String
}

// 菜品表
model Dish {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  image       String
  description String?
}

// 购物车表
model Cart {
  id          Int      @id @default(autoincrement())
  userId      Int
  dishId      Int
  quantity    Int
}

// 订单表
model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  merchantId  Int
  status      String
  orderTime   DateTime
  deliveryTime DateTime?
  totalPrice  Float
}

// 订单详情表
model OrderDetail {
  id          Int      @id @default(autoincrement())
  orderId     Int
  dishId      Int
  quantity    Int
  price       Float
}

// 支付表
model Payment {
  id          Int      @id @default(autoincrement())
  orderId     Int
  method      String
  payTime     DateTime
  amount      Float
}

// 评价表
model Review {
  id          Int      @id @default(autoincrement())
  userId      Int
  merchantId  Int
  orderId     Int
  content     String
  stars       Int
}
